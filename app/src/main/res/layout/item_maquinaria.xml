<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modelo y Marca -->
        <TextView
            android:id="@+id/tvModeloMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modelo/Marca"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <!-- Placa -->
        <TextView
            android:id="@+id/tvPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Horometro -->
        <TextView
            android:id="@+id/tvHorometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horómetro"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Año de Compra -->
        <TextView
            android:id="@+id/tvAnoCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año de Compra"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Botón de Detalles -->
        <Button
            android:id="@+id/btnDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white"
            android:layout_gravity="end" />

        <!-- Layout para Detalles Recientes -->
        <LinearLayout
            android:id="@+id/llDetallesRecientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <!-- Fecha de Uso -->
            <TextView
                android:id="@+id/tvFechaUso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Uso"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Horas de Uso -->
            <TextView
                android:id="@+id/tvHorasUso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horas de Uso"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Lugar de Trabajo -->
            <TextView
                android:id="@+id/tvLugarTrabajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar de Trabajo"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Petróleo Usado -->
            <TextView
                android:id="@+id/tvPetroleoUsado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petróleo Usado"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- Aceite Hidráulico -->
            <TextView
                android:id="@+id/tvAceiteHidraulico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceite Hidráulico"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
